# Maintainer: Roan Huang <pichuang@cs.nctu.edu.tw>

_pkgname=ryu
pkgname=$_pkgname-git
pkgver=v4.14
pkgrel=1
pkgdesc="Ryu component-based software defined networking framework"
arch=('i686' 'x86_64' 'armv6h')
url="http://osrg.github.io/ryu/"
license=('Apache License 2.0')
depends=('python' 'python-setuptools' 'python-pip' 'python-lxml' 'python-greenlet' 'python-webob' 'python-six' 'python-routes' 'python-paramiko' 'python-oslo-config' 'python-msgpack' 'python-netaddr' 'python-eventlet' 'python-pbr' 'python-stevedore')
makedepends=('git' 'sed')
provides=("$_pkgname")
conflicts=("$_pkgname")
install=
source=("$_pkgname::git+https://github.com/osrg/ryu.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"
  git describe --tags | sed 's|-|.|g'
}

package() {
  cd "$srcdir/$_pkgname"
  python setup.py install --root="$pkgdir/" --optimize=1
}

# vim:set ts=2 sw=2 et:
